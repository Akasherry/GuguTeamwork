<!--pages/mine/mine.wxml-->
<view class="layer">
  <view class="userinfo">
    <view id="inf" style="height:300rpx;">
      <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
      <block wx:else>
        <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
        <view class="userinfo-nickname">{{userInfo.nickName}}</view>
      </block>
    </view>
    <view class="menu_container">
      <view class="menu_item" wx:for="{{menus}}" wx:for-index="idx" wx:for-item="menu" bindtap='{{menu.func}}'>
        <image class="menu_icon" src="{{menu.url}}" />
        <text class="menu_name" style='color:black'>{{menu.name}}</text>
      </view>
    </view>
    <view class="setting_container">
      <view class="setting">
        <text>界面设置</text>
      </view>
      <view class="setting">
        <text>我要打赏</text>
      </view>
      <view class="setting">
        <text>帮助</text>
      </view>
    </view>
  </view>
</view>
